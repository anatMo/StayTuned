<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RegisterActivity"
    android:background="@drawable/bg_gradient">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/register" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/register_ICN_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:background="@drawable/rounded_corners_info"
            android:src="@drawable/logo1" />

        <TextView
            android:id="@+id/register_TXT_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="monospace"
            android:text="Register"
            android:layout_marginBottom="15dp"
            android:textColor="#04512E"
            android:textSize="30sp"
            android:textStyle="bold"/>


<!--        <EditText-->
<!--            android:id="@+id/register_editText_name"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:hint="name"-->
<!--            android:textAlignment="center"-->
<!--            android:textColor="@color/white"-->
<!--            android:textColorHint="@color/gray_light"-->
<!--            android:textColorLink="@color/pink_orenge"-->
<!--            android:textSize="8pt"-->
<!--            android:visibility="invisible"/>-->

        <EditText
            android:id="@+id/register_EDTXT_email"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Email"
            android:background="@drawable/rounded_corners_info"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_marginBottom="15dp"
            android:textColorHint="@color/gray_dark_dark"
            android:textColorLink="@color/pink_orenge"
            android:inputType="textEmailAddress"
            android:textSize="8pt"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/register_IMG_showHidePassword"
                android:layout_width="25dp"
                android:layout_height="23dp"
                android:layout_alignEnd="@+id/register_EDTXT_password"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="4dp"
                android:background="@drawable/ic_eye_visibility_off_24"
                android:drawableTint="@color/gray_dark_dark"
                android:gravity="center"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/register_EDTXT_password"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corners_info"
                android:gravity="center"
                android:hint="Password"
                android:inputType="textPassword"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textColorHighlight="@color/pink_orenge"
                android:textColorHint="@color/gray_dark_dark"
                android:textColorLink="@color/pink"
                android:textSize="8pt" />




        </RelativeLayout>



        <Button
            android:id="@+id/register_BTN_register"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="REGISTER"
            android:textColor="@color/white"
            android:background="@drawable/rounded_corners_butten4"
            android:textSize="7pt"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/register_BTN_backToLogin"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_butten4"
            android:text="BACK TO LOGIN"
            android:textColor="@color/white"
            android:textSize="7pt"/>







    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>