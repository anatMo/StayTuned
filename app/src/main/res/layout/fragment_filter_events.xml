<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Fragment_FilterEvents">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/question" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:text="@string/filterTitle"
        android:textSize="45sp"
        android:textColor="#63400C"
        android:textStyle="bold"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/rounded_corners_info3">



            <Button
                android:id="@+id/filter_BTN_allEvents"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="All Events"
                android:textSize="30dp"
                android:layout_marginBottom="55dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_corners_info4"/>

            <Button
                android:id="@+id/filter_BTN_myEvents"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="My   Events"
                android:textSize="30dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_corners_info4"/>

        </LinearLayout>

</FrameLayout>